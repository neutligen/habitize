<% provide(:title, @user.email[/[a-z\d\w\-.]+/,0]) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
		  <h1>
		  	<%= gravatar_for @user %>
		  	<%= @user.email[/[a-z\d\w\-.]+/,0]%>
      </h1>
            <% if current_user.admin? %>
              <h2><%= link_to "ユーザー管理", users_path %></h2>
            <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.to_do_lists.any? %>
    <h3><%= @user.to_do_lists.count %>件のリスト</h3>
    <ol class="to_do_lists">
      <%= render @to_do_lists %>
    </ol>
    <%= will_paginate @to_do_lists %>
    <% end %>
  </div>
</div>